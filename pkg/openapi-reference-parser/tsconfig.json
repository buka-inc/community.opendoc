{
  "exclude": ["node_modules", "dist"],
  "include": [
    "env.d.ts",
    "src/**/*",
    ".eslintrc.cjs",
    "jest.config.ts",
    "test/**/*"
  ],
  "compilerOptions": {
    "strict": true,
    "noImplicitAny": false,
    "declaration": true,
    "noEmitOnError": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "module": "ESNext",
    "target": "ESNext",
    "baseUrl": "./",
    "rootDir": "./",
    "paths": {
      "~/*": ["src/*"],
      "~~/*": ["./*"]
    },
    "plugins": [
      { "transform": "typescript-transform-paths" },
      { "transform": "typescript-transform-paths", "afterDeclarations": true }
    ]
  },
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
    }
  }
}
